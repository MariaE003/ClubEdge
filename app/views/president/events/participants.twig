<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Participants - Espace Président">
    <title>Participants - Espace Président</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('css/variables.css') }}">
    <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('css/layout.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components.css') }}">
    <link rel="stylesheet" href="{{ asset('css/utilities.css') }}">
    <link rel="stylesheet" href="{{ asset('css/animations.css') }}">
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/pages/dashboard.css') }}">
</head>

<body>
    {% set capacity = 20 %}
    {% set count = event.participants_count|default(participants|length) %}

    <div class="app-layout">
        <aside class="app-sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="{{ path('home') }}" class="sidebar-logo">
                    <svg width="32" height="32" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="40" height="40" rx="4" fill="#FF4F00" />
                        <path
                            d="M12 28V12H20C22.1217 12 24.1566 12.8429 25.6569 14.3431C27.1571 15.8434 28 17.8783 28 20C28 22.1217 27.1571 24.1566 25.6569 25.6569C24.1566 27.1571 22.1217 28 20 28H12Z"
                            stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <span class="sidebar-logo-text">ClubEdge</span>
                </a>
            </div>

            <nav class="sidebar-nav">
                <ul class="sidebar-menu">
                    <li class="sidebar-item">
                        <a href="{{ path('president/dashboard') }}" class="sidebar-link">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="1.5">
                                <rect x="3" y="3" width="7" height="9" rx="1" />
                                <rect x="14" y="3" width="7" height="5" rx="1" />
                                <rect x="14" y="12" width="7" height="9" rx="1" />
                                <rect x="3" y="16" width="7" height="5" rx="1" />
                            </svg>
                            <span>Tableau de bord</span>
                        </a>
                    </li>
                </ul>

                <div class="sidebar-section">
                    <h3 class="sidebar-section-title">Événements</h3>
                    <ul class="sidebar-menu">
                        <li class="sidebar-item">
                            <a href="{{ path('president/events') }}" class="sidebar-link active">
                                <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="1.5">
                                    <rect x="3" y="4" width="18" height="18" rx="2" />
                                    <line x1="16" y1="2" x2="16" y2="6" />
                                    <line x1="8" y1="2" x2="8" y2="6" />
                                    <line x1="3" y1="10" x2="21" y2="10" />
                                </svg>
                                <span>Mes événements</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="{{ path('president/events/create') }}" class="sidebar-link">
                                <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="1.5">
                                    <circle cx="12" cy="12" r="10" />
                                    <line x1="12" y1="8" x2="12" y2="16" />
                                    <line x1="8" y1="12" x2="16" y2="12" />
                                </svg>
                                <span>Créer un événement</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="sidebar-footer">
                <div class="sidebar-user">
                    <div class="avatar avatar-sm">PR</div>
                    <div class="sidebar-user-info">
                        <span class="sidebar-user-name">Président</span>
                        <span class="sidebar-user-role">Club</span>
                    </div>
                </div>
            </div>
        </aside>

        <div class="app-main">
            <header class="app-header">
                <button class="btn btn-icon btn-ghost lg:hidden" id="menu-toggle" aria-label="Ouvrir le menu">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="1.5">
                        <line x1="3" y1="12" x2="21" y2="12" />
                        <line x1="3" y1="6" x2="21" y2="6" />
                        <line x1="3" y1="18" x2="21" y2="18" />
                    </svg>
                </button>
                <span class="badge badge-accent ml-4">Espace Président</span>
                <div class="flex-1"></div>
                <div class="avatar avatar-sm">PR</div>
            </header>

            <main class="app-content">
                <nav class="breadcrumb mb-6" aria-label="Fil d'Ariane">
                    <ol class="breadcrumb-list flex items-center gap-2" role="list">
                        <li class="breadcrumb-item flex items-center">
                            <a href="{{ path('president/events') }}"
                                class="breadcrumb-link text-sm text-secondary hover:text-primary">Mes événements</a>
                        </li>
                        <li class="breadcrumb-separator flex items-center text-muted" aria-hidden="true">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="1.5">
                                <polyline points="9 18 15 12 9 6" />
                            </svg>
                        </li>
                        <li class="breadcrumb-item flex items-center">
                            <span class="breadcrumb-current text-sm font-medium">Participants</span>
                        </li>
                    </ol>
                </nav>

                <div class="page-header flex items-center justify-between">
                    <div>
                        <h1 class="page-title">Participants</h1>
                        <p class="page-description">{{ event.title ?? '' }} — {{ count }} inscrits</p>
                    </div>
                    <button class="btn btn-outline" disabled title="Bonus - export PDF (template)">
                        Exporter PDF
                    </button>
                </div>

                <div class="card mb-6">
                    <div class="card-body flex items-center justify-between gap-4">
                        <div>
                            <div class="font-medium">Détails de l'événement</div>
                            <div class="text-sm text-muted">
                                {{ (event.event_date ?? '')|date('d/m/Y H:i') }} — {{ event.location ?? '' }}
                            </div>
                        </div>
                        <span class="badge badge-secondary">{{ count }}/{{ capacity }}</span>
                    </div>
                </div>

                <div class="card mb-6">
                    <div class="card-body p-4 flex gap-4">
                        <div class="relative flex-1">
                            <svg class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" width="18" height="18"
                                viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <circle cx="11" cy="11" r="8" />
                                <line x1="21" y1="21" x2="16.65" y2="16.65" />
                            </svg>
                            <input type="text" class="form-input pl-10" placeholder="Rechercher un participant...">
                        </div>
                        <select class="form-input w-48 form-select">
                            <option value="all">Tous</option>
                            <option value="confirmed">Confirmés</option>
                        </select>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body p-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Participant</th>
                                    <th>Email</th>
                                    <th>Statut</th>
                                    <th>Inscription</th>
                                    <th class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if participants is empty %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted p-6">Aucun participant.</td>
                                </tr>
                                {% else %}
                                {% for p in participants %}
                                {% set initials = (p.prenom|default('')|slice(0, 1) ~ p.nom|default('')|slice(0, 1))|upper %}
                                <tr>
                                    <td>
                                        <div class="flex items-center gap-3">
                                            <div class="avatar avatar-sm">{{ initials }}</div>
                                            <div>
                                                <div class="font-medium">{{ p.prenom ?? '' }} {{ p.nom ?? '' }}</div>
                                                <div class="text-xs text-muted">Étudiant</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{{ p.email ?? '' }}</td>
                                    <td><span class="badge badge-success">Confirmé</span></td>
                                    <td>—</td>
                                    <td class="text-right">
                                        <button class="btn btn-ghost btn-sm text-error" disabled title="Template">
                                            Retirer
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>

            <footer class="app-footer">
                <p class="text-sm text-muted">2026 ClubEdge. Tous droits réservés.</p>
            </footer>
        </div>
    </div>

    <div class="mobile-overlay" id="mobile-overlay"></div>
    <script src="{{ asset('js/main.js') }}" defer></script>
</body>

</html>
