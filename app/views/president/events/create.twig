    <link rel="stylesheet" href="{{ asset('css/variables.css') }}">
    <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('css/layout.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components.css') }}">
    <link rel="stylesheet" href="{{ asset('css/utilities.css') }}">
    <link rel="stylesheet" href="{{ asset('css/animations.css') }}">
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/pages/dashboard.css') }}">
</head>

<body>
    <div class="app-layout">
        <aside class="app-sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="{{ path('home') }}" class="sidebar-logo">
                    <svg width="32" height="32" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="40" height="40" rx="4" fill="#FF4F00" />
                        <path
                            d="M12 28V12H20C22.1217 12 24.1566 12.8429 25.6569 14.3431C27.1571 15.8434 28 17.8783 28 20C28 22.1217 27.1571 24.1566 25.6569 25.6569C24.1566 27.1571 22.1217 28 20 28H12Z"
                            stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <span class="sidebar-logo-text">ClubEdge</span>
                </a>
            </div>

            <nav class="sidebar-nav">
                <ul class="sidebar-menu">
                    <li class="sidebar-item">
                        <a href="/ClubEdge/president/dashboard" class="sidebar-link active">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="3" width="7" height="9" rx="1" />
                                <rect x="14" y="3" width="7" height="5" rx="1" />
                                <rect x="14" y="12" width="7" height="9" rx="1" />
                                <rect x="3" y="16" width="7" height="5" rx="1" />
                            </svg>
                            <span>Tableau de bord</span>
                        </a>
                    </li>
                </ul>

                <div class="sidebar-section">
                    {# <h3 class="sidebar-section-title">Mon Club</h3> #}
                    <ul class="sidebar-menu">
                        <li class="sidebar-item">
                            <a href="/ClubEdge/student/club-detail?idC={{id_club}}" class="sidebar-link">
                                {# <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                    <circle cx="12" cy="12" r="3" />
                                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06" />
                                </svg> #}
                                {# <span>Paramètres du club</span> #}
                                Mon Club
                            </a>
                        </li>
                        {# <li class="sidebar-item">
                            <a href="/ClubEdge/president/CreateArticle?idC={{president.club_id}}" class="sidebar-link">
                             Creer un article
                            </a>
                        </li> #}
                         <li class="sidebar-item">
                            <a href="/ClubEdge/president/ArticleManage?idC={{president.club_id}}" class="sidebar-link">
                             Mes Article
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/ClubEdge/president/events" class="sidebar-link">
                             Mes Evenements
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </aside>

        <div class="app-main">
            <header class="app-header">
                <div class="header-left">
                    <h1 class="header-title">Créer un événement</h1>
                </div>
                <div class="header-right">
                    <a href="{{ path('president/events') }}" class="btn btn-outline">Annuler</a>
                </div>
            </header>

            <main class="app-content">
                <div class="card">
                    <div class="card-body">
                        <form method="post" action="{{ path('president/events/store') }}" enctype="multipart/form-data"
                            class="form grid gap-6" novalidate>
                            <input type="hidden" name="_csrf" value="{{ csrf_token() }}">

                            <div class="form-group">
                                <label for="event-title" class="form-label">Titre</label>
                                <input type="text" id="event-title" name="title" class="form-input"
                                    value="{{ old.title ?? '' }}" required>
                                {% if errors.title ?? false %}
                                <p class="text-sm text-error mt-1">{{ errors.title }}</p>
                                {% endif %}
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div class="form-group">
                                    <label for="event-date" class="form-label">Date</label>
                                    <input type="datetime-local" id="event-date" name="event_date" class="form-input"
                                        value="{{ old.event_date ?? '' }}" required>
                                    {% if errors.event_date ?? false %}
                                    <p class="text-sm text-error mt-1">{{ errors.event_date }}</p>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label for="event-location" class="form-label">Lieu</label>
                                    <input type="text" id="event-location" name="location" class="form-input"
                                        value="{{ old.location ?? '' }}">
                                    {% if errors.location ?? false %}
                                    <p class="text-sm text-error mt-1">{{ errors.location }}</p>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="event-description" class="form-label">Description</label>
                                <textarea id="event-description" name="description" class="form-textarea" rows="5"
                                    placeholder="Décrivez l'événement...">{{ old.description ?? '' }}</textarea>
                            </div>

                            <div class="form-group">
                                <label for="event-images" class="form-label">Images</label>
                                <input type="file" id="event-images" name="images[]" class="form-input" accept="image/*"
                                    multiple>
                                {% if errors.images ?? false %}
                                <p class="text-sm text-error mt-1">{{ errors.images }}</p>
                                {% endif %}
                            </div>

                            <div class="flex justify-end gap-3">
                                <button type="submit" class="btn btn-primary">Publier</button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>

            <footer class="app-footer">
                <p class="text-sm text-muted">2026 ClubEdge. Tous droits réservés.</p>
            </footer>
        </div>
    </div>

    <div class="mobile-overlay" id="mobile-overlay"></div>
    <script src="{{ asset('js/main.js') }}" defer></script>
</body>

</html>

