{% set president = president %}

<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Tableau de bord président - ClubEdge">
    <title>Espace Président - ClubEdge</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/variables.css">
    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/reset.css">
    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/layout.css">
    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/components.css">
    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/utilities.css">
    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/animations.css">
    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/responsive.css">
    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/pages/dashboard.css">
</head>

<body>
    <div class="app-layout">
        <aside class="app-sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="/" class="sidebar-logo">
                    <svg width="32" height="32" viewBox="0 0 40 40" fill="none">
                        <rect width="40" height="40" rx="4" fill="#FF4F00" />
                        <path d="M12 28V12H20C22.12 12 24.16 12.84 25.66 14.34C27.16 15.84 28 17.88 28 20C28 22.12 27.16 24.16 25.66 25.66C24.16 27.16 22.12 28 20 28H12Z" stroke="white" stroke-width="2" />
                    </svg>
                    <span class="sidebar-logo-text">ClubEdge</span>
                </a>
            </div>

            <nav class="sidebar-nav">
                <ul class="sidebar-menu">
                    <li class="sidebar-item">
                        <a href="/ClubEdge/president/dashboard" class="sidebar-link active">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="3" width="7" height="9" rx="1" />
                                <rect x="14" y="3" width="7" height="5" rx="1" />
                                <rect x="14" y="12" width="7" height="9" rx="1" />
                                <rect x="3" y="16" width="7" height="5" rx="1" />
                            </svg>
                            <span>Tableau de bord</span>
                        </a>
                    </li>
                </ul>

                <div class="sidebar-section">
                    {# <h3 class="sidebar-section-title">Mon Club</h3> #}
                    <ul class="sidebar-menu">
                        <li class="sidebar-item">
                            <a href="/ClubEdge/student/club-detail?idC=10" class="sidebar-link">
                                {# <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                    <circle cx="12" cy="12" r="3" />
                                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06" />
                                </svg> #}
                                {# <span>Paramètres du club</span> #}
                                Mon Club
                            </a>
                        </li>
                        {# <li class="sidebar-item">
                            <a href="/ClubEdge/president/CreateArticle?idC={{president.club_id}}" class="sidebar-link">
                             Creer un article
                            </a>
                        </li> #}
                         <li class="sidebar-item">
                            <a href="/ClubEdge/president/ArticleManage?idC={{president.club_id}}" class="sidebar-link">
                             Mes Article
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/ClubEdge/president/events" class="sidebar-link">
                             Mes Evenements
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="sidebar-footer">
                <div class="sidebar-user">
                    <div class="avatar avatar-sm">{{ president.initials }}</div>
                    <div class="sidebar-user-info">
                        <span class="sidebar-user-name">{{ president.fullname }}</span>
                        <span class="sidebar-user-role">Présidente</span>
                    </div>
                </div>
            </div>
        </aside>

        <div class="app-main">
            <header class="app-header">
                <button class="btn btn-icon btn-ghost" id="menu-toggle">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <line x1="3" y1="12" x2="21" y2="12" /><line x1="3" y1="6" x2="21" y2="6" /><line x1="3" y1="18" x2="21" y2="18" />
                    </svg>
                </button>
                {% if user == 'president' %}
                    <span class="badge badge-accent ml-4">Espace Président</span>
                {% endif %}

                <div class="flex-1"></div>
                <div class="avatar avatar-sm">{{ president.initials }}</div>
            </header>

            <main class="app-content">
                <div class="page-header">
                    <h1 class="page-title">Bienvenue, {{ president.prenom }}</h1>
                    <p class="page-description">Gérez votre club, créez des événements et publiez des articles.</p>
                </div>

                <div class="stats-grid mb-8 stagger-animation">
                    <div class="stat-card">
                        <div class="stat-value">{{ stats.members }}/{{ stats.max_members }}</div>
                        <div class="stat-label">Membres du club</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">{{ stats.events }}</div>
                        <div class="stat-label">Événements actifs</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">{{ stats.articles }}</div>
                        <div class="stat-label">Articles publiés</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">{{ stats.rating }}</div>
                        <div class="stat-label">Note moyenne</div>
                    </div>
                </div>

                <div class="grid grid-cols-12 gap-6">
                    <div class="col-span-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="upcoming-events">
                                    {% for event in upcoming_events %}
                                        <div class="event-preview">
                                            <div class="event-preview-date">
                                                <span class="event-preview-day">{{ event.day }}</span>
                                                <span class="event-preview-month">{{ event.month }}</span>
                                            </div>
                                            <div class="event-preview-info">
                                                <h3 class="event-preview-title">{{ event.title }}</h3>
                                                <p class="event-preview-meta">{{ event.location }} - {{ event.participants }} inscrits</p>
                                            </div>
                                            {# <div class="event-preview-actions">
                                                <button class="btn btn-outline btn-sm">Modifier</button>
                                            </div> #}
                                        </div>
                                    {% else %}
                                        <p class="text-muted text-center py-4">Aucun événement à venir</p>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-span-4">
                        <div class="card">
                            <div class="card-header flex items-center justify-between">
                                <h2 class="card-title">Membres</h2>
                                <span class="badge badge-secondary">{{ stats.members }}/{{ stats.max_members }}</span>
                            </div>
                            <div class="card-body">
                                <div class="members-list">
                                    {% for member in members %}
                                        <div class="member-item">
                                            <div class="avatar avatar-sm">{{ member.initials }}</div>
                                            <div class="member-info">
                                                <span class="member-name">{{ member.name }}</span>
                                                {% if member.role %}
                                                    <span class="badge badge-accent">{{ member.role }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                {# <a href="members" class="btn btn-outline w-full mt-4">Voir tous les membres</a> #}
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <footer class="app-footer">
                <p class="text-sm text-muted">2026 ClubEdge. Tous droits réservés.</p>
            </footer>
        </div>
    </div>
    <script src="../../assets/js/main.js" defer></script>
</body>
</html>
