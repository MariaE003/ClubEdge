<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Découvrez tous les événements des clubs universitaires">
    <title>Événements - ClubEdge</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('css/variables.css') }}">
    <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('css/layout.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components.css') }}">
    <link rel="stylesheet" href="{{ asset('css/utilities.css') }}">
    <link rel="stylesheet" href="{{ asset('css/animations.css') }}">
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/pages/events.css') }}">
</head>

<body>
    <div class="app-layout">
        <aside class="app-sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="{{ path('home') }}" class="sidebar-logo">
                    <svg width="32" height="32" viewBox="0 0 40 40" fill="none">
                        <rect width="40" height="40" rx="4" fill="#FF4F00" />
                        <path
                            d="M12 28V12H20C22.12 12 24.16 12.84 25.66 14.34C27.16 15.84 28 17.88 28 20C28 22.12 27.16 24.16 25.66 25.66C24.16 27.16 22.12 28 20 28H12Z"
                            stroke="white" stroke-width="2" />
                    </svg>
                    <span class="sidebar-logo-text">ClubEdge</span>
                </a>
            </div>

            <nav class="sidebar-nav">
                <ul class="sidebar-menu">
                    <li class="sidebar-item">
                        <a href="{{ path('etudiant/dashboard') }}" class="sidebar-link">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="1.5">
                                <rect x="3" y="3" width="7" height="9" rx="1" />
                                <rect x="14" y="3" width="7" height="5" rx="1" />
                                <rect x="14" y="12" width="7" height="9" rx="1" />
                                <rect x="3" y="16" width="7" height="5" rx="1" />
                            </svg>
                            <span>Tableau de bord</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="{{ path('etudiant/events') }}" class="sidebar-link active">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="1.5">
                                <rect x="3" y="4" width="18" height="18" rx="2" />
                                <line x1="16" y1="2" x2="16" y2="6" />
                                <line x1="8" y1="2" x2="8" y2="6" />
                                <line x1="3" y1="10" x2="21" y2="10" />
                            </svg>
                            <span>Événements</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <div class="app-main">
            <header class="app-header">
                <div class="header-left">
                    <h1 class="header-title">Événements</h1>
                </div>
            </header>

            <main class="app-content">
                {% if flash is defined and flash and flash.message %}
                <div class="alert {{ flash.type == 'success' ? 'alert-success' : 'alert-error' }} mb-6">
                    {{ flash.message }}
                </div>
                {% endif %}

                <div class="events-grid">
                    {% if events is empty %}
                    <div class="card">
                        <div class="card-body">
                            <p class="text-sm text-muted">Aucun événement.</p>
                        </div>
                    </div>
                    {% else %}
                    {% for event in events %}
                    <div class="event-card" data-status="{{ (event.is_past ?? false) ? 'past' : 'upcoming' }}">
                        <div class="event-card-header">
                            {% set cover = (event.images is defined and event.images|length > 0) ? event.images[0] : null %}
                            <div class="event-card-cover"
                                style="{{ cover ? 'background-image:url(' ~ cover ~ ');background-size:cover;background-position:center;' : 'background: linear-gradient(135deg, #FF4F00 0%, #ff7a3d 100%);' }}">
                            </div>
                        </div>
                        <div class="event-card-body">
                            {% if event.is_past ?? false %}
                            <span class="badge badge-secondary mb-2">Terminé</span>
                            {% else %}
                            <span class="badge badge-accent mb-2">À venir</span>
                            {% endif %}
                            <h3 class="event-card-title">{{ event.title }}</h3>
                            <p class="event-card-description">{{ event.description ?? '' }}</p>
                            <div class="event-card-meta">
                                <div class="event-card-info">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <circle cx="12" cy="12" r="10" />
                                        <polyline points="12 6 12 12 16 14" />
                                    </svg>
                                    <span>{{ event.event_date }}</span>
                                </div>
                                <div class="event-card-info">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                                        <circle cx="12" cy="10" r="3" />
                                    </svg>
                                    <span>{{ event.location ?? '' }}</span>
                                </div>
                            </div>
                            <div class="event-card-footer">
                                <div class="event-card-participants">
                                    <span class="text-sm text-muted">{{ event.participants_count ?? 0 }} participants</span>
                                </div>
                                <div class="flex gap-2">
                                    <a href="{{ path('etudiant/events/' ~ event.id) }}" class="btn btn-outline btn-sm">
                                        Détails
                                    </a>
                                    {% if (event.is_past ?? false) %}
                                    <button class="btn btn-secondary btn-sm" disabled>Fermé</button>
                                    {% elseif (event.is_joined ?? false) %}
                                    <button class="btn btn-outline btn-sm" disabled>Inscrit</button>
                                    {% else %}
                                    <form method="post" action="{{ path('etudiant/events/' ~ event.id ~ '/join') }}">
                                        <input type="hidden" name="_csrf" value="{{ csrf_token() }}">
                                        <button class="btn btn-primary btn-sm" type="submit">S'inscrire</button>
                                    </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    {% endif %}
                </div>
            </main>

            <footer class="app-footer">
                <p class="text-sm text-muted">2026 ClubEdge. Tous droits réservés.</p>
            </footer>
        </div>
    </div>

    <div class="mobile-overlay" id="mobile-overlay"></div>
    <script src="{{ asset('js/main.js') }}" defer></script>
</body>

</html>

