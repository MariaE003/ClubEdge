<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Gestion des étudiants - Admin ClubEdge">
    <title>Gestion des étudiants - Admin - ClubEdge</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/admin.css">
</head>

<body>
<div class="app-layout">

    <!-- Admin Sidebar -->
    <aside class="app-sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="dashboard" class="sidebar-logo">
                <svg width="32" height="32" viewBox="0 0 40 40" fill="none">
                    <rect width="40" height="40" rx="4" fill="#FF4F00" />
                    <path
                        d="M12 28V12H20C22.12 12 24.16 12.84 25.66 14.34C27.16 15.84 28 17.88 28 20C28 22.12 27.16 24.16 25.66 25.66C24.16 27.16 22.12 28 20 28H12Z"
                        stroke="white" stroke-width="2" />
                </svg>
                <span class="sidebar-logo-text">ClubEdge</span>
            </a>
            <span class="badge badge-accent ml-2">Admin</span>
        </div>

        <nav class="sidebar-nav">
            <ul class="sidebar-menu">
                <li class="sidebar-item">
                    <a href="dashboard.html" class="sidebar-link">
                        <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <rect x="3" y="3" width="7" height="9" rx="1" />
                            <rect x="14" y="3" width="7" height="5" rx="1" />
                            <rect x="14" y="12" width="7" height="9" rx="1" />
                            <rect x="3" y="16" width="7" height="5" rx="1" />
                        </svg>
                        <span>Tableau de bord</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-section">
                <h3 class="sidebar-section-title">Gestion</h3>
                <ul class="sidebar-menu">
                    <li class="sidebar-item">
                        <a href="clubs.html" class="sidebar-link">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                <circle cx="9" cy="7" r="4" />
                            </svg>
                            <span>Clubs</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="students-manage.html" class="sidebar-link active">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                <circle cx="12" cy="7" r="4" />
                            </svg>
                            <span>Étudiants</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="events-overview.html" class="sidebar-link">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <rect x="3" y="4" width="18" height="18" rx="2" />
                                <line x1="16" y1="2" x2="16" y2="6" />
                                <line x1="8" y1="2" x2="8" y2="6" />
                                <line x1="3" y1="10" x2="21" y2="10" />
                            </svg>
                            <span>Événements</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </aside>

    <div class="app-main">
        <header class="app-header">
            <button class="btn btn-icon btn-ghost" id="menu-toggle">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <line x1="3" y1="12" x2="21" y2="12" />
                    <line x1="3" y1="6" x2="21" y2="6" />
                    <line x1="3" y1="18" x2="21" y2="18" />
                </svg>
            </button>
            <h1 class="text-lg font-semibold ml-4">Gestion des étudiants</h1>
            <div class="flex-1"></div>
            <button class="btn btn-outline btn-sm">Déconnexion</button>
        </header>

        <main class="app-content">

            <div class="card">
                <div class="card-body p-0">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Étudiant</th>
                            <th>Email</th>
                            <th>Club Actuel</th>
                            <th>Date d'inscription</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody id="students-tbody">

                        {% for u in users %}
                            <tr>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <img src="{{ u.profile}}"  class ="avatar "/>
                                        <span class="font-medium">
                                            {{ u.nom }} {{ u.prenom }}
                                        </span>
                                    </div>
                                </td>

                                <td class="text-muted">{{ u.email }}</td>

                                <td>
                                    <div class="flex items-center gap-2">
                                        <div class="avatar avatar-xs">CI</div>
                                        <span class="text-sm">{{ u.getClub().getName() }}</span>
                                        <span class="badge badge-primary badge-sm">{{ u.role }}</span>
                                    </div>
                                </td>

                                <td class="text-muted">
                                    {{ u.dateC|date('Y/m/d') }}
                                </td>

                                <td>
                                    <div class="flex gap-1">
                                        <a href="editUser/{{ u.id }}" class="btn btn-icon btn-ghost btn-sm" title="Modifier">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                                 stroke="currentColor" stroke-width="1.5">
                                                <path
                                                    d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                            </svg>
                                        </a>

                                        <a href="deleteUser/{{ u.id }}" class="btn btn-icon btn-ghost btn-sm text-error" title="Supprimer">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                                 stroke="currentColor" stroke-width="1.5">
                                                <polyline points="3 6 5 6 21 6" />
                                                <path
                                                    d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>

        </main>
    </div>
</div>

<script src="/../ClubEdge/public/assets/js/main.js" defer></script>
</body>
</html>
