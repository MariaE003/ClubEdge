<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Gestion des étudiants - Admin ClubEdge">
    <title>Gestion des étudiants - Admin - ClubEdge</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/../ClubEdge/public/assets/css/admin.css">
</head>

<body>
<div class="app-layout">

    <!-- Admin Sidebar -->
    <aside class="app-sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="admin/dashboard" class="sidebar-logo">
                    <svg width="32" height="32" viewBox="0 0 40 40" fill="none">
                        <rect width="40" height="40" rx="4" fill="#FF4F00" />
                        <path
                            d="M12 28V12H20C22.12 12 24.16 12.84 25.66 14.34C27.16 15.84 28 17.88 28 20C28 22.12 27.16 24.16 25.66 25.66C24.16 27.16 22.12 28 20 28H12Z"
                            stroke="white" stroke-width="2" />
                    </svg>
                    <span class="sidebar-logo-text">ClubEdge</span>
                </a>
                <span class="badge badge-accent ml-2">Admin</span>
            </div>

            <nav class="sidebar-nav">
                <ul class="sidebar-menu">
                    <li class="sidebar-item">
                        <a href="dashboard" class="sidebar-link active">
                            <svg class="sidebar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="1.5">
                                <rect x="3" y="3" width="7" height="9" rx="1" />
                                <rect x="14" y="3" width="7" height="5" rx="1" />
                                <rect x="14" y="12" width="7" height="9" rx="1" />
                                <rect x="3" y="16" width="7" height="5" rx="1" />
                            </svg>
                            <span>Tableau de bord</span>
                        </a>
                    </li>
                </ul>

                <div class="sidebar-section">
                    <h3 class="sidebar-section-title">Gestion</h3>
                    <ul class="sidebar-menu">
                        <li class="sidebar-item">
                            <a href="clubs" class="sidebar-link">
                                <span>Clubs</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="users" class="sidebar-link">
                                <span>Utilisateurs</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="events" class="sidebar-link">
                                <span>Événements</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </aside>

    <div class="app-main">
        <header class="app-header">
            <button class="btn btn-icon btn-ghost" id="menu-toggle">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <line x1="3" y1="12" x2="21" y2="12" />
                    <line x1="3" y1="6" x2="21" y2="6" />
                    <line x1="3" y1="18" x2="21" y2="18" />
                </svg>
            </button>
            <h1 class="text-lg font-semibold ml-4">Gestion des étudiants</h1>
            <div class="flex-1"></div>
            <button class="btn btn-outline btn-sm"><a href="lougout">Déconnexion</a></button>
        </header>

        <main class="app-content">

            <div class="card">
                <div class="card-body p-0">
                <!-- Filters -->
<form method="GET" class="admin-toolbar admin-toolbar--filters mb-6">

    <!-- Search -->
    <div class="admin-search">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="1.5">
            <circle cx="11" cy="11" r="8" />
            <line x1="21" y1="21" x2="16.65" y2="16.65" />
        </svg>
        <input
            type="text"
            name="q"
            class="form-input"
            placeholder="Rechercher un étudiant..."
            value="{{ filters.q|default('') }}"
        >
    </div>

    <!-- Role filter -->
    <select name="role" class="form-input form-select">
        <option value="">Tous les rôles</option>
        <option value="etudiant" {{ filters.role == 'etudiant' ? 'selected' : '' }}>
            Étudiants
        </option>
        <option value="president" {{ filters.role == 'president' ? 'selected' : '' }}>
            Présidents
        </option>
    </select>

    <button class="btn btn-primary btn-sm" type="submit">
        Filtrer
    </button>
</form>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Étudiant</th>
                            <th>Email</th>
                            <th>Club Actuel</th>
                            <th>Date d'inscription</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody id="students-tbody">
                            {% include "admin/_students_rows.twig" with { users: users } %}
                        </tbody>

                    </table>
                </div>
            </div>

        </main>
    </div>
</div>

<script src="/../ClubEdge/public/assets/js/main.js" defer></script>
</body>
</html>
