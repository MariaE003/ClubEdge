{% if users is empty %}
<tr>
    <td colspan="5" class="text-muted" style="padding:16px;">
        Aucun r√©sultat
    </td>
</tr>
{% else %}
{% for u in users %}
<tr>

    <!-- √âtudiant -->
    <td>
        <div class="flex items-center gap-3">
            {% if u.profile %}
                <img src="{{ u.profile }}" class="avatar avatar-sm">
            {% else %}
                <div class="avatar avatar-sm bg-black text-white">
                    {{ (u.nom|slice(0,1) ~ u.prenom|slice(0,1))|upper }}
                </div>
            {% endif %}
            <span class="font-medium">{{ u.nom }} {{ u.prenom }}</span>
        </div>
    </td>

    <!-- Email -->
    <td class="text-muted">
        {{ u.email }}
    </td>

    <!-- Club -->
    <td>
        <div class="flex items-center gap-2">
            <div class="avatar avatar-xs">
                {{ u.club_name is defined and u.club_name ? u.club_name|slice(0,2)|upper : 'NO' }}
            </div>
            <span class="text-sm">
                {{ u.club_name ?? 'Non assign√©' }}
            </span>
            <span class="badge badge-primary badge-sm">
                {{ u.role }}
            </span>
        </div>
    </td>

    <!-- Date -->
    <td class="text-muted">
        {{ u.date_creation|date('Y/m/d') }}
    </td>

    <!-- Actions -->
    <td>
        <div class="flex gap-1">
            <a href="editUser/{{ u.id }}" class="btn btn-icon btn-ghost btn-sm" title="Modifier">
                ‚úèÔ∏è
            </a>
            <a href="deleteUser/{{ u.id }}" class="btn btn-icon btn-ghost btn-sm text-error" title="Supprimer">
                üóëÔ∏è
            </a>
        </div>
    </td>

</tr>
{% endfor %}
{% endif %}
